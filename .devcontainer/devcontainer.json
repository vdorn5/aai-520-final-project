{
    "name": "devbox-AAI-520-final-project",
    "build": {
        "dockerfile": "Containerfile"
    },
    "runArgs": [
        "--gpus",
        "all"
    ],
    "mounts": [
        "source=/etc/timezone,target=/etc/timezone,type=bind",
        "source=/etc/localtime,target=/etc/localtime,type=bind"
    ],
    "features": {},
    "postCreateCommand": "nvidia-smi || echo 'GPU not available'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",   // Jupyter extension
                "ms-python.python",     // Python extension
                "adammaraszek.vscode-pdf", // Viewing PDFs
                "demystifying-javascript.python-extensions-pack" // Python developer pack
            ]
        }
    }
}
